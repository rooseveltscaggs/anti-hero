[Unit]
Description=Uvicorn instance to serve FastAPI app Anti-Hero orchestrator
After=network.target
[Service]
User=rscaggs
Group=www-data
WorkingDirectory=TEXTDIR/orchestrator
Environment="PATH=/rscaggs/anti-hero/orchestrator/env/bin"
ExecStart=TEXTDIR/orchestrator/env/bin/gunicorn main:app --workers 4 --worker-class uvicorn.workers.UvicornWorker --bind 0.0.0.0:8000
[Install]
WantedBy=multi-user.target