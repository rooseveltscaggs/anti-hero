[Unit]
Description=Uvicorn instance to serve FastAPI app Anti-Hero
After=network.target
[Service]
User=rscaggs
Group=www-data
WorkingDirectory=/users/rscaggs/anti-hero/server
Environment="PATH=/rscaggs/anti-hero/server/env/bin"
ExecStart=/users/rscaggs/anti-hero/server/env/bin/gunicorn main:app --workers 4 --worker-class uvicorn.workers.UvicornWorker --bind 0.0.0.0:80
[Install]
WantedBy=multi-user.target